{
  "name": "sse-chat-app",
  "version": "1.0.0",
  "description": "A simple real-time chat application using Node.js, Express, and Server-Sent Events (SSE)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node server.js",
    "dev:watch": "NODE_ENV=development nodemon server.js",
    "build": "echo 'No build step required'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",

    "test:postgresql": "jest tests/postgresql.test.js",
    "test:all": "jest --runInBand",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:restart": "docker-compose restart app",
    "docker:clean": "docker-compose down -v",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "keywords": [
    "chat",
    "sse",
    "server-sent-events",
    "express",
    "nodejs",
    "realtime",
    "websocket-alternative"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/sse-chat-app.git"
  },
  "dependencies": {
    "express": "^4.21.2",
    "uuid": "^9.0.0",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "supertest": "6.3.3",
    "@jest/globals": "29.7.0",
    "jsdom": "23.0.1",
    "eventsource": "2.0.2",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}