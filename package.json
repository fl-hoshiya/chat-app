{
  "name": "sse-chat-app",
  "version": "1.0.0",
  "description": "A simple real-time chat application using Node.js, Express, and Server-Sent Events (SSE)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "echo 'No build step required'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/final-integration.test.js --runInBand",
    "test:responsive": "jest tests/responsive-design.test.js",
    "test:performance": "jest tests/performance-memory.test.js --runInBand",
    "test:all": "jest --runInBand",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "keywords": [
    "chat",
    "sse",
    "server-sent-events",
    "express",
    "nodejs",
    "realtime",
    "websocket-alternative"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/sse-chat-app.git"
  },
  "dependencies": {
    "express": "^4.21.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "supertest": "6.3.3",
    "@jest/globals": "29.7.0",
    "jsdom": "23.0.1",
    "eventsource": "2.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}